<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:jdbc="http://www.springframework.org/schema/jdbc"
       xmlns:tx="http://www.springframework.org/schema/tx" xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd">

    <context:component-scan base-package="cz.metacentrum.perun.spRegistration"/>
    <context:property-placeholder properties-ref="properties" order="1" ignore-unresolvable="true" />
    <context:property-placeholder properties-ref="facilityServiceAttributes" order="2" ignore-unresolvable="true"/>
    <context:property-placeholder properties-ref="facilitySamlAttributes" order="3" ignore-unresolvable="true"/>
    <context:property-placeholder properties-ref="facilityOidcAttributes" order="4" ignore-unresolvable="true"/>
    <context:property-placeholder properties-ref="facilityOrganizationAttributes" order="5" ignore-unresolvable="true"/>
    <context:property-placeholder properties-ref="facilityAccessControlAttributes" order="6" ignore-unresolvable="true"/>
    <context:property-placeholder properties-ref="messagesProperties" order="7" null-value="@null" />

    <tx:annotation-driven proxy-target-class="true" />

    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/auth/**" />
            <bean id="userSettingInterceptor" class="cz.metacentrum.perun.spRegistration.rest.interceptors.UserSettingInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>

    <bean id="defaultProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="properties">
            <props>
                <!-- APP -->
                <prop key="appAdminIds">0,1,2,3</prop>
                <prop key="extSource.proxy.entityId">https://login.cesnet.cz/idp/</prop>
                <prop key="protocols.enabled">oidc,saml</prop>
                <prop key="availableLanguages">en,cs</prop>
                <prop key="host.url">http://spreg.com/spreg</prop>
                <prop key="secret">secretSaltGoesHere123!X$</prop>
                <prop key="logout.url">https://spreg.aai.cesnet.cz/Shibboleth.sso/Logout?target=https%3A%2F%2Fspreg.aai.cesnet.cz%2Fspreg%2F</prop>
                <!-- ATTRS -->
                <prop key="attr.userEmail">urn:perun:user:attribute-def:def:preferredMail</prop>
                <prop key="attr.proxyIdentifier">urn:perun:facility:attribute-def:def:proxyIdentifiers</prop>
                <prop key="attr.proxyIdentifier.value">XYZ</prop>
                <prop key="attr.masterProxyIdentifier">urn:perun:facility:attribute-def:def:masterProxyIdentifier</prop>
                <prop key="attr.masterProxyIdentifier.value">https://login.cesnet.cz/idp/</prop>
                <prop key="attr.isTestSp">urn:perun:facility:attribute-def:def:isTestSp</prop>
                <prop key="attr.showOnServiceList">urn:perun:facility:attribute-def:def:showOnServiceList</prop>
                <prop key="attr.administratorContact">urn:perun:facility:attribute-def:def:administrationContact</prop>
                <prop key="attr.oidcClientId">urn:perun:facility:attribute-def:def:OIDCClientID</prop>
                <prop key="attr.oidcClientSecret">urn:perun:facility:attribute-def:def:OIDCClientSecret</prop>
                <prop key="attr.entityId">urn:perun:facility:attribute-def:def:entityID</prop>
                <prop key="attr.isOidc">urn:perun:facility:attribute-def:def:isOidcFacility</prop>
                <prop key="attr.isSaml">urn:perun:facility:attribute-def:def:isSamlFacility</prop>
                <!-- APPROVALS -->
                <prop key="approval.confirmationPeriod.days">30</prop>
                <prop key="approval.confirmationPeriod.hours">0</prop>
                <prop key="approval.allowToSpecifyOwn">true</prop>
                <!-- APP FRONTEND ADDITIONS -->
                <prop key="app.footer.html"/> <!-- TODO: move to frontend config -->
                <prop key="app.header.html"/> <!-- TODO: move to frontend config -->
                <prop key="app.header.title">Registration of SP - dev</prop> <!-- TODO: move to frontend config -->
                <prop key="app.header.logo">https://perun.cesnet.cz/signpost/images/perun_3.png</prop> <!-- TODO: move to frontend config -->
                <!-- DATABASE -->
                <prop key="jdbc.driver">com.mysql.cj.jdbc.Driver</prop>
                <prop key="jdbc.url">jdbc:mysql://127.0.0.1:3306/spreg</prop>
                <prop key="jdbc.username">user</prop>
                <prop key="jdbc.password">pass</prop>
                <!-- PERUN RPC -->
                <prop key="rpc.url">https://perun-dev.cesnet.cz/ba/rpc/</prop>
                <prop key="rpc.user">user</prop>
                <prop key="rpc.password">pass</prop>
            </props>
        </property>
    </bean>

    <bean id="properties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="properties" ref="defaultProperties"/>
        <property name="locations">
            <list>
                <value>file:///etc/perun-spRegistration/appConfig.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="false"/>
    </bean>

    <bean id="messagesProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="properties">
            <props>
                <prop key="mail.host">localhost</prop>
                <prop key="mail.port">25</prop>
                <prop key="mail.protocol">smtp</prop>

                <prop key="mail.auth.username">@null</prop>
                <prop key="mail.auth.password">@null</prop>

                <prop key="mail.smtp.auth">false</prop>
                <prop key="mail.smtp.starttls.enable">false</prop>
                <prop key="mail.smtp.connectiontimeout">3000</prop>
                <prop key="mail.smtp.timeout">5000</prop>
                <prop key="mail.smtp.writetimeout">3000</prop>
                <prop key="mail.debug">false</prop>

                <prop key="mail.app.admins.mails">appAdminIds@test.com,adminsMailingList@test.com</prop>
                <prop key="mail.approval.default-authorities.mails">mail1@there.com,mail2@there.com</prop>
                <prop key="mail.from">test@mail.com</prop>
                <prop key="mail.subject.prefix">CESNET AAI - </prop>
                <prop key="mail.footer">&lt;br/&gt; &lt;br/&gt;Best regards, &lt;br/&gt; test.mail.com &lt;br/&gt; service registration</prop>

                <prop key="create.user.subject.en">Created a new request %REQUEST_ID%</prop>
                <prop key="create.user.message.en">Your request for action %ACTION% and service %SERVICE_NAME% has been created. Assigned ID: %REQUEST_ID%</prop>
                <prop key="create.admin.subject.en">Created a new request %REQUEST_ID%</prop>
                <prop key="create.admin.message.en">A new request for action %ACTION% and service %SERVICE_NAME% has been created. Assigned ID: %REQUEST_ID%</prop>

                <prop key="update.user.subject.en">Request %REQUEST_ID% updated</prop>
                <prop key="update.user.message.en">Request %REQUEST_ID% updated</prop>
                <prop key="update.admin.subject.en">Request %REQUEST_ID% updated</prop>
                <prop key="update.admin.message.en">Request %REQUEST_ID% updated</prop>

                <prop key="status_updated.user.subject.en">Updated status of request %REQUEST_ID%</prop>
                <prop key="status_updated.user.message.en">Status has been updated to %EN_NEW_STATUS%</prop>

                <prop key="signed.user.subject.en">Request %REQUEST_ID% signed</prop>
                <prop key="signed.user.message.en">Request %REQUEST_ID% signed</prop>
                <prop key="signed.admin.subject.en">Request %REQUEST_ID% signed</prop>
                <prop key="signed.admin.message.en">Request %REQUEST_ID% signed</prop>

                <prop key="production.authorities.subject.en">Approve transfer to production: %SERVICE_NAME%</prop>
                <prop key="production.authorities.message.en">For an approval of moving service %SERVICE_NAME% to production visit &lt;a href="%APPROVAL_LINK%"&gt;this link&lt;/a&gt;</prop>

                <prop key="admins.add.subject.en">Approve request to become admin: %SERVICE_NAME%</prop>
                <prop key="admins.add.message.en">For approval of becoming admin of %SERVICE_NAME% visit &lt;a href="%APPROVAL_LINK%"&gt;this link&lt;/a&gt;</prop>
            </props>
        </property>
        <property name="locations">
            <list>
                <value>file:///etc/perun-spRegistration/mail.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true"/>
        <property name="fileEncoding" value="UTF-8"/>
    </bean>

    <bean id="enLocale" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="locations">
            <list>
                <value>file:///etc/perun-spRegistration/langs/en.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true"/>
        <property name="fileEncoding" value="UTF-8"/>
    </bean>

    <bean id="csLocale" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="locations">
            <list>
                <value>file:///etc/perun-spRegistration/langs/cs.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true"/>
        <property name="fileEncoding" value="UTF-8"/>
    </bean>

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${jdbc.driver}"/>
        <property name="url" value="${jdbc.url}"/>
        <property name="username" value="${jdbc.username}"/>
        <property name="password" value="${jdbc.password}"/>
    </bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <constructor-arg name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="transactionManager"
          class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource" />
    </bean>

    <bean id="perunConnector" class="cz.metacentrum.perun.spRegistration.persistence.connectors.impl.PerunConnectorRpc">
        <property name="perunRpcUrl" value="${rpc.url}"/>
        <property name="perunRpcUser" value="${rpc.user}"/>
        <property name="perunRpcPassword" value="${rpc.password}"/>
        <property name="userEmailAttr" value="${attr.userEmail}"/>
        <property name="appAdminIds" value="#{'${appAdminIds}'.split('\s*,\s*')}" />
    </bean>

    <bean id="requestManager" class="cz.metacentrum.perun.spRegistration.persistence.managers.impl.RequestManagerImpl">
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>

    <bean id="prodTransferAuthoritiesMailsMap" class="org.springframework.beans.factory.config.PropertiesFactoryBean" >
        <property name="locations">
            <list>
                <value>file:///etc/perun-spRegistration/prodTransferAuthoritiesMails.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true"/>
    </bean>

    <bean id="appConfig" class="cz.metacentrum.perun.spRegistration.persistence.configs.AppConfig">
        <property name="perunConnector" ref="perunConnector" />
        <property name="appAdminIds" value="#{'${appAdminIds}'.split('\s*,\s*')}" />
        <property name="loginExtSource" value="${extSource.proxy.entityId}" />
        <property name="protocolsEnabled" value="#{'${protocols.enabled}'.split('\s*,\s*')}" />
        <property name="availableLanguages" value="#{'${availableLanguages}'.split('\s*,\s*')}" />
        <property name="footerHTML" value="${app.footer.html}" />
        <property name="headerHTML" value="${app.header.html}" />
        <property name="headerTitle" value="${app.header.title}" />
        <property name="headerLogo" value="${app.header.logo}" />
        <property name="confirmationPeriodDays" value="${approval.confirmationPeriod.days}" />
        <property name="confirmationPeriodHours" value="${approval.confirmationPeriod.hours}" />
        <property name="specifyAuthoritiesEnabled" value="${approval.allowToSpecifyOwn}" />
        <property name="secret" value="${secret}" />
        <property name="signaturesEndpointUrl" value="${host.url}/auth/sign"/>
        <property name="adminsEndpoint" value="${host.url}/auth/facilities/addAdmin/sign"/>
        <property name="logoutUrl" value="${logout.url}"/>
        <property name="prodTransferAuthoritiesMailsMap" ref="prodTransferAuthoritiesMailsMap" />
        <property name="masterProxyIdentifierAttribute" value="${attr.masterProxyIdentifier}" />
        <property name="masterProxyIdentifierAttributeValue" value="${attr.masterProxyIdentifier.value}" />
        <property name="proxyIdentifierAttribute" value="${attr.proxyIdentifier}" />
        <property name="proxyIdentifierAttributeValue" value="${attr.proxyIdentifier.value}" />
        <property name="isTestSpAttribute" value="${attr.isTestSp}" />
        <property name="showOnServicesListAttributeName" value="${attr.showOnServiceList}" />
        <property name="entityIdAttribute" value="${attr.entityId}"/>
        <property name="clientIdAttribute" value="${attr.oidcClientId}"/>
        <property name="clientSecretAttribute" value="${attr.oidcClientSecret}"/>
        <property name="isOidcAttributeName" value="${attr.isOidc}"/>
        <property name="isSamlAttributeName" value="${attr.isSaml}"/>
        <property name="adminsAttributeName" value="${attr.administratorContact}" />
        <property name="userEmailAttributeName" value="${attr.userEmail}" />
    </bean>

    <import resource="attributes-context.xml" />

    <bean id="config" class="cz.metacentrum.perun.spRegistration.persistence.configs.Config">
        <property name="appConfig" ref="appConfig" />
        <property name="facilityServiceConfig" ref="facilityServiceConfig" />
        <property name="facilityOrganizationConfig" ref="facilityOrganizationConfig" />
        <property name="facilityMembershipConfig" ref="facilityAccessControlConfig" />
        <property name="facilityOidcConfig" ref="facilityOidcConfig" />
        <property name="facilitySamlConfig" ref="facilitySamlConfig" />
        <property name="messagesConfig" ref="messagesProperties" />
    </bean>

</beans>